<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_item_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/laptop_2" />

            <View
                android:id="@+id/line_item"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/img_item_photo"
                android:alpha="0.2"
                android:background="@color/grey_400" />

            <TextView
                android:id="@+id/tv_brand"
                style="@style/brandFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/line_item"
                android:text="@string/brand_laptop" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/priceFontStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/price" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>