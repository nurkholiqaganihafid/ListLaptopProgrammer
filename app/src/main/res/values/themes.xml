<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListLaptopProgrammer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/color_status_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="titleBarLayoutFontStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="brandFontStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">10dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="priceFontStyle">
        <item name="android:textColor">@color/deep_orange_500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="productNameFontStyle">
        <item name="android:textColor">@color/blue_grey_700</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="productLineFontStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/blue_grey_700</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="productLineFontStyle.second">
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>